<%= form_for @table, :html => {:class => "table-form"} do |f|%>
  <ul>
  	<% @table.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  	<% end %>
  </ul>
  <p class = "table-inputs">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p class = "table-inputs">
    <%= f.label "Description" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %> &nbsp;
    <%= button_tag "Reset Fields", type: :reset %>
  </p>
<% end %>
